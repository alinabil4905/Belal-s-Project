<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/todlListFragment2">

    <fragment
        android:id="@+id/todlAddFragment"
        android:name="com.example.todlprojectv1.view.list.TodlAddFragment"
        android:label="New Task"
        tools:layout="@layout/fragment_sub_list_add" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.todlprojectv1.view.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
    <fragment
        android:id="@+id/subListFragment"
        android:name="com.example.todlprojectv1.view.SubList.SubListFragment"
        android:label="fragment_sub_list"
        tools:layout="@layout/fragment_sub_list" >
        <action
            android:id="@+id/action_subListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_subListFragment_to_subListAddFragment"
            app:destination="@id/subListAddFragment" />
    </fragment>
    <fragment
        android:id="@+id/todlListFragment2"
        android:name="com.example.todlprojectv1.view.list.TodlListFragment"
        android:label="Home Page"
        tools:layout="@layout/fragment_todl_list">
        <action
            android:id="@+id/action_todlListFragment2_to_todlAddFragment"
            app:destination="@id/todlAddFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_todlListFragment2_to_subListFragment"
            app:destination="@id/subListFragment" />
    </fragment>
    <fragment
        android:id="@+id/subListAddFragment"
        android:name="com.example.todlprojectv1.view.SubList.SubListAddFragment"
        android:label="fragment_sub_list_add" />
</navigation>